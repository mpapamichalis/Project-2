<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Blood Type</th>
            <th scope="col">condition</th>
        </tr>
    </thead>
    <tbody>
        {{#each patients}}
        <tr>
            <th scope="row">{{this.id}}</th>
            <td>{{this.patientName}}</td>
            <td>{{this.bloodType}}</td>
            <td>{{this.patientCon}}</td>
        </tr>
        {{/each}}


    </tbody>
</table>

<button class="btn-add-donor" id="addPatientBtn" data-toggle="modal" data-target="#newPatient" type="submit"><strong>+</strong></button>

{{!-- modal --}}
<div class="modal fade" id="newPatient" tabindex="-1" role="dialog" aria-labelledby="patientModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="patientModalCenterTitle">New Patient</h5>
      </div>
      <div class="modal-body">
        <form class="newPatientForm">
            <div class="form-group">
                <label for="patientName" class="modal-text">Patient Name</label>
                <input type="text" class="form-control" id="patientNameInput">
            </div>
            <br>
            <div class="form-group">
                <label for="patbloodType" class="modal-text">BloodType</label>
                <select class="form-control" id="patBtInput">
                    <option>O -</option>
                    <option>O +</option>
                    <option>A -</option>
                    <option>A +</option>
                    <option>B -</option>
                    <option>B +</option>
                    <option>AB -</option>
                    <option>AB +</option>
                </select>
            </div>
            <br>
            <div class="form-group">
                <label for="patientCon" class="modal-text">Patient Conditions</label>
                <input type="text" class="form-conrol" id="patientConInput">
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal" id="close-m">Close</button>
        <button type="submit" class="sub-btn-m" id="newPatientbtn">Add Patient</button>
      </div>
    </div>
  </div>
</div>
